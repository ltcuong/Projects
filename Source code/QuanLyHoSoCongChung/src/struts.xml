<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>	
	<package name="default" extends="struts-default" namespace="/">	
		<result-types>
			<result-type name="tiles" class="org.apache.struts2.views.tiles.TilesResult" />
		</result-types>
		
		<interceptors>
	        <interceptor name="authenticationInterceptor" class="authentication.AuthenticationInterceptor"/>
	        <interceptor-stack name="defaultSecurityStackWithAuthentication">
				<interceptor-ref name="defaultStack" />
				<interceptor-ref name="authenticationInterceptor">
					<param name="excludeActions">*</param>					
				</interceptor-ref>  
				<interceptor-ref name="exception" />				
			</interceptor-stack>  	                             
	    </interceptors>
	    
	    <default-interceptor-ref name="defaultSecurityStackWithAuthentication"/>  	
		<action name="" class="controller.welcome.LoginAdmin">
			<result name="success" type="tiles">LoginAdmin</result>
			<result name="redirect" type="redirect">${url}</result>        	 
		</action>
		<action name="*" class="controller.welcome.{1}">
			<result name="success" type="tiles">{1}</result>
			<result name="redirect" type="redirect">${url}</result>        	 
		</action>
		
		<action name="UploadFile" class="fileupload.UploadFile">
			<result name="success">/views/ajax/Data.jsp</result>					
		</action>
				
	</package>
	<!-- <constant name="struts.action.excludePattern" value="/UploadFile"></constant> -->
	<include file="ajax.xml" />
	<include file="quanlynguoidung.xml" />
	<include file="ajaxquanlynguoidung.xml" />
	<include file="quanlyhopdong.xml" />
	<include file="ajaxhopdong.xml" />
	<include file="quanlybaocao.xml" />
	<include file="ajaxbaocao.xml" />
	<include file="danhmuc.xml" />
	<include file="ajaxdanhmuc.xml" />
	<include file="huongdan.xml" />
</struts>
