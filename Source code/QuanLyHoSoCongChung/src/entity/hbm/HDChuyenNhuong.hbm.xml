<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="entity">
	<class name="HDChuyenNhuong" table="hd_chuyennhuong" lazy="true">	
		<id name="hopDongChuyenNhuongID" type="integer">
            <column name="HopDongChuyenNhuongID" />
            <generator class="foreign">
                <param name="property">hopDong</param>
            </generator>
        </id>
        <one-to-one name="hopDong" class="HDHopDong" constrained="true" />
        
		<property name="giaChuyenNhuong" column="GiaChuyenNhuong"/>	
		<property name="phuongThucThanhToan" column="PhuongThucThanhToan"/>	
		<property name="ngayGiaoTaiSan" column="NgayGiaoTaiSan"/>	
		<property name="cacThoaThuanKhac" column="CacThoaThuanKhac"/>	
		<property name="ngayCoHieuLuc" column="NgayCoHieuLuc"/>		
	
	</class>

</hibernate-mapping> 