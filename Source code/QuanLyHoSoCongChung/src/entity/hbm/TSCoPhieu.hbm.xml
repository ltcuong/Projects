<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="entity">
	<class name="TSCoPhieu" table="ts_cophieu" lazy="true">	
		<id name="taiSanCoPhieuID" type="integer">
            <column name="TaiSanCoPhieuID" />
            <generator class="foreign">
                <param name="property">taiSan</param>
            </generator>
        </id>
        
		<property name="ctyPhatHanhCoPhieu" column="CtyPhatHanhCoPhieu"/>	
		<property name="diaChiCongTy" column="DiaChiCongTy"/>	
		<property name="menhGia" column="MenhGia"/>
		<property name="tongMenhGia" column="TongMenhGia"/>	
		<property name="soDangKy" column="SoDangKy"/>	
		<property name="ngayPhatHanh" column="NgayPhatHanh"/>	
		<property name="loaiCoPhieu" column="LoaiCoPhieu"/>	
		<property name="tenCoDong" column="TenCoDong"/>
		<property name="diaChiCoDong" column="DiaChiCoDong"/>	
		<property name="loaiGiayToID" column="LoaiGiayToID"/>	
		<property name="soGiayTo" column="SoGiayTo"/>
		<property name="ngayCapGiayTo" column="NgayCapGiayTo"/>	
		<property name="noiCapGiayTo" column="NoiCapGiayTo"/>	
					
		 <one-to-one name="taiSan" class="TSTaiSan" constrained="true" />						
	</class>
</hibernate-mapping> 