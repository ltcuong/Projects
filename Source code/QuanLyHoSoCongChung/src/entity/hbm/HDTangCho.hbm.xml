<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="entity">
	<class name="HDTangCho" table="hd_tangcho" lazy="true">	
		<id name="hopDongTangChoID" type="integer">
            <column name="HopDongTangChoID" />
            <generator class="foreign">
                <param name="property">hopDong</param>
            </generator>
        </id>
        <one-to-one name="hopDong" class="HDHopDong" constrained="true" />
        
        
		<property name="ngayGiaoTaiSan" column="NgayGiaoTaiSan"/>
		<property name="giaTriQuyenSDDatVaTSGanLienVoiDat" column="GiaTriQuyenSDDatVaTSGanLienVoiDat"/>
		<property name="giayToVeQuyenSoHuuTaiSan" column="GiayToVeQuyenSoHuuTaiSan"/>
		<property name="cacThoaThuanKhac" column="CacThoaThuanKhac"/>
		<property name="ngayCoHieuLuc" column="NgayCoHieuLuc"/>
		<property name="trangThietBiChuYeu" column="TrangThietBiChuYeu"/>
		<property name="giayToPhapLy" column="GiayToPhapLy"/>
		<property name="cacCamKetKhac" column="CacCamKetKhac"/>
		<property name="dieuKienTangCho" column="DieuKienTangCho"/>
	</class>

</hibernate-mapping> 