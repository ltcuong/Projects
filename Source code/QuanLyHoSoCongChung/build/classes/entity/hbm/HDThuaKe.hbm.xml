<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="entity">
	<class name="HDThuaKe" table="hd_thuake" lazy="true">	
		<id name="hopDongThuaKeID" type="integer">
            <column name="HopDongThuaKeID" />
            <generator class="foreign">
                <param name="property">hopDong</param>
            </generator>
        </id>
        <one-to-one name="hopDong" class="HDHopDong" constrained="true" />
        
        
		<property name="noiDungTuChoiDiSan" column="NoiDungTuChoiDiSan"/>
		<property name="giayToCanCuDeThuaKe" column="GiayToCanCuDeThuaKe"/>
		<property name="ngayChet" column="NgayChet"/>
		<property name="soGiayChungTu" column="SoGiayChungTu"/>
		<property name="ngayCapGiayChungTu" column="NgayCapGiayChungTu"/>
		<property name="noiCapGiayChungTu" column="NoiCapGiayChungTu"/>
	</class>

</hibernate-mapping> 