<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="entity">
	<class name="TSSoTietKiem" table="ts_sotietkiem" lazy="true">	
		<id name="taiSanSoTietKiemID" type="integer">
            <column name="TaiSanSoTietKiemID" />
            <generator class="foreign">
                <param name="property">taiSan</param>
            </generator>
        </id>
        
		<property name="ngayGui" column="NgayGui"/>	
		<property name="soDuTienGui" column="SoDuTienGui"/>			
		<property name="kyHan" column="KyHan"/>
		<property name="laiXuat" column="LaiXuat"/>
		<property name="loaiTien" column="LoaiTien"/>
		<property name="nganHangCap" column="NganHangCap"/>			
		<property name="hoTenChuSo" column="HoTenChuSo"/>
		<property name="diaChi" column="DiaChi"/>
		<property name="loaiGiayToID" column="LoaiGiayToID"/>
		<property name="soGiayTo" column="SoGiayTo"/>
		<property name="ngayCapGiayTo" column="NgayCapGiayTo"/>
		<property name="noiCapGiayTo" column="NoiCapGiayTo"/>		
					
		<one-to-one name="taiSan" class="TSTaiSan" constrained="true" />		
		<many-to-one name="loaiGiayTo" column="LoaiGiayToID" class="DMLoaiGiayTo" insert="false" update="false" />
	</class>
</hibernate-mapping> 