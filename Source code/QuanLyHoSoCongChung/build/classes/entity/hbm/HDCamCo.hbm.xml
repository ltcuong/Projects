<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="entity">
	<class name="HDCamCo" table="hd_camco" lazy="true">	
		<id name="hopDongCamCoID" type="integer">
            <column name="HopDongCamCoID" />
            <generator class="foreign">
                <param name="property">hopDong</param>
            </generator>
        </id>
        <one-to-one name="hopDong" class="HDHopDong" constrained="true" />
        
		<property name="soTienDamBao" column="SoTienDamBao"/>	
		<property name="giaTriTaiSanCamCo" column="GiaTriTaiSanCamCo"/>	
		<property name="ngayThamDinhTaiSan" column="NgayThamDinhTaiSan"/>	
		<property name="phuongThucXuLyTaiSan" column="PhuongThucXuLyTaiSan"/>	
		<property name="cacThoaThuanKhac" column="CacThoaThuanKhac"/>		
		<property name="ngayCoHieuLuc" column="NgayCoHieuLuc"/>
	</class>

</hibernate-mapping> 