<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="entity">
	<class name="TBLNhomTaiKhoan" table="tbl_nhomtaikhoan" lazy="true">			
		<id name="nhomID" type="integer" column="NhomID">	
		<generator class="increment"></generator>	
		</id>	
		<property name="nhomMa" column="NhomMa"/>	
		<property name="nhomTen" column="NhomTen"/>	
		<property name="ngayCapNhat" column="NgayCapNhat"/>	
		<property name="locked" column="Locked"/>	
		<property name="nhomChaID" column="NhomChaID"/>
		
		<many-to-one name="nhomCha" column="NhomChaID" class="TBLNhomTaiKhoan" insert="false" update="false" />				
	</class>
	
</hibernate-mapping> 