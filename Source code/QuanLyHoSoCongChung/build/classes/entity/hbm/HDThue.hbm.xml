<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="entity">
	<class name="HDThue" table="hd_thue" lazy="true">	
		<id name="hopDongThueID" type="integer">
            <column name="HopDongThueID" />
            <generator class="foreign">
                <param name="property">hopDong</param>
            </generator>
        </id>
        <one-to-one name="hopDong" class="HDHopDong" constrained="true" />
        
        
		<property name="thoiHanThue" column="ThoiHanThue"/>
		<property name="ngayKetThucChoThue" column="NgayKetThucChoThue"/>
		<property name="choThueTuNgay" column="ChoThueTuNgay"/>
		<property name="mucDichThue" column="MucDichThue"/>
		<property name="giaThue" column="GiaThue"/>
		<property name="phuongThucThanhToan" column="PhuongThucThanhToan"/>
		<property name="ngayGiaoTaiSan" column="NgayGiaoTaiSan"/>
		<property name="cacThoaThuanKhac" column="CacThoaThuanKhac"/>
		<property name="ngayCoHieuLuc" column="NgayCoHieuLuc"/>
	</class>

</hibernate-mapping> 