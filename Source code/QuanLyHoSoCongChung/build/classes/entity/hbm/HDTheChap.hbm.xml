<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="entity">
	<class name="HDTheChap" table="hd_thechap" lazy="true">	
		<id name="hopDongTheChapID" type="integer">
            <column name="HopDongTheChapID" />
            <generator class="foreign">
                <param name="property">hopDong</param>
            </generator>
        </id>
        <one-to-one name="hopDong" class="HDHopDong" constrained="true" />
        
        
		<property name="soTienDamBao" column="SoTienDamBao"/>
		<property name="giaTheChap" column="GiaTheChap"/>
		<property name="ngayThamDinh" column="NgayThamDinh"/>
		<property name="phuongThucXuLy" column="PhuongThucXuLy"/>
		<property name="cacThoaThuanKhac" column="CacThoaThuanKhac"/>
		<property name="ngayCoHieuLuc" column="NgayCoHieuLuc"/>
	</class>

</hibernate-mapping> 