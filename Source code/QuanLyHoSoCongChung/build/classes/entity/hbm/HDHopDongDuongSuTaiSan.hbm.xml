<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="entity">
	<class name="HDHopDongDuongSuTaiSan" table="hopdong_taisan_duongsu" lazy="true">	
		<id name="hopDongDuongSuTaiSanID" type="integer" column="HopDongDuongSuTaiSanID">
			<generator class="increment"></generator>
		</id>			
		<property name="hopDongID" column="HopDongID"/>
		<property name="duongSuID" column="DuongSuID"/>
		<property name="taiSanID" column="TaiSanID"/>
		<property name="conSoHuu" column="ConSoHuu"/>
		<property name="laNguoiDaiDien" column="LaNguoiDaiDien"/>
		
		<many-to-one name="hopDong" column="HopDongID" class="HDHopDong" insert="false" update="false" />
		<many-to-one name="duongSu" column="DuongSuID" class="DSDuongSu" insert="false" update="false" />
		<many-to-one name="taiSan" column="TaiSanID" class="TSTaiSan" insert="false" update="false" />
	</class>

</hibernate-mapping> 