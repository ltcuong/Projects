<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<package name="huongdan" extends="struts-default" namespace="/huongdan">
		<result-types>
			<result-type name="tiles"
				class="org.apache.struts2.views.tiles.TilesResult" />
		</result-types>

		<interceptors>
			<interceptor name="authenticationInterceptor"
				class="authentication.AuthenticationInterceptor" />
			<interceptor-stack name="defaultSecurityStackWithAuthentication">
				<interceptor-ref name="defaultStack" />
				<interceptor-ref name="exception" />
				<interceptor-ref name="authenticationInterceptor">
					<param name="excludeActions">Login,Welcome</param>
					<param name="roleActions">admin:*</param>
				</interceptor-ref>
			</interceptor-stack>
		</interceptors>
		<default-interceptor-ref name="defaultSecurityStackWithAuthentication" />

		<action name="Logout" class="controller.welcome.Logout">
			<result name="redirect" type="redirect">${url}</result>
		</action>

		<action name="*" class="controller.huongdan.{1}">
			<result name="success" type="tiles">huongdan.{1}</result>
			<result name="redirect" type="redirect">${url}</result>
		</action>
	</package>
</struts>
