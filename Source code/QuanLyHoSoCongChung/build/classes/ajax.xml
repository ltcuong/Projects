<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>		
	<package name="ajax" extends="struts-default" namespace="/ajax">
		<action name="*" class="controller.ajax.{1}">
			<result name="success">/views/ajax/{1}.jsp</result>					
		</action>	
		<action name="ChangeLanguage" class="controller.ajax.ChangeLanguage">
			<result name="success">/views/ajax/Data.jsp</result>					
		</action>		
		<action name="CheckLoginAdmin" class="controller.welcome.LoginAdmin" method="executeCheckLoginAdmin">
			<result name="success">/views/ajax/Data.jsp</result>				
		</action>
		<action name="Cront" class="controller.ajax.Cront">
			<result name="success">/views/ajax/Data.jsp</result>				
		</action>
		
		<action name="BackupDatabase" class="controller.ajax.BackupDatabase">
			<result name="success">/views/ajax/Data.jsp</result>				
		</action>
	</package>

</struts>
